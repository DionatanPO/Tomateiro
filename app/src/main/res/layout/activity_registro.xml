<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.RegistroActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".view.RegistroActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/colorPrimaryDark">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    android:text="Registrar"
                    android:textColor="@color/colorBranca"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Informe os dados abaixo"
                    android:textColor="@color/colorBranca"
                    android:textSize="18dp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="32dp"
                android:layout_weight="1"
                android:columnCount="1">

                <TextView
                    android:id="@+id/txt_nome"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seu Nome:"
                    android:textColor="@color/verdeEscuro"
                    android:autoSizeTextType="uniform"
                    android:textStyle="bold" />

                <EditText
                    android:maxLength="20"
                    android:id="@+id/registro_nome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_propriedade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome da Propriedade:"
                    android:textColor="@color/verdeEscuro"
                    android:textSize="15dp"
                    android:autoSizeTextType="uniform"
                    android:textStyle="bold" />

                <EditText
                    android:maxLength="20"
                    android:id="@+id/registro_propriedade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_codigo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Código de Identificação:"
                    android:textColor="@color/verdeEscuro"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:inputType="number"
                    android:maxLength="15"
                    android:id="@+id/registro_identificacao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                 android:id="@+id/txt_senha1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senha:"
                    android:textColor="@color/verdeEscuro"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:maxLength="15"
                    android:inputType="textPassword"
                    android:id="@+id/senha1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_senha2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Repetir Senha:"
                    android:textColor="@color/verdeEscuro"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:maxLength="15"
                    android:inputType="textPassword"
                    android:id="@+id/senha2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </GridLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">


                <Button
                    android:id="@+id/btn_concluir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/verdeEscuro"
                    android:text="Concluir"
                    android:textColor="@color/colorBranca" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>